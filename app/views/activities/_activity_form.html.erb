<div id="errors" style="display:none"></div>

<%= form_for @activity, :html => { :class => "activity_form #{@activity.new? ? 'dark': ''}" } do |f| %>
  <fieldset>
    <% if @activity.new? %><legend>New activity</legend><% end %>
    <% if current_user.is_admin? %>
      <p>
        <%= f.select :user_id, @users.map { |u| [u.id, u.name] }, :label => "User" %>
      </p>
    <% end %>
    <p>
      <%= f.label :date, "Date" %>
      <%= f.text_field :date, :class => 'datepicker', :value => @activity.date.formatted(current_user.date_format) %>
    </p>
    <p>
      <%= f.label :project_id, "Project" %>
      <%= @activity.project_id %>
      <%= f.select :project_id, grouped_options_for_select({ "Recent projects" => @recent_projects.map { |p| [p.name, p.id] }, 
        "Other projects" => @other_projects.map { |p| [p.name, p.id] } }, @activity.project_id) %>
    </p>
    <%= f.hidden_field :main_activity_type_id, :value => nil %>
    <% if @activity.available_main_activity_types.any? %>
      <p>
        <%= f.label :main_activity_type_id, "Type" %>
        <%= f.select :main_activity_type_id, @activity.available_main_activity_types.map { |at| [at.id, at.name] }, :selected => @activity.main_activity_type_id.to_s, :disabled => @activity.available_main_activity_types.empty? %>
      </p>
    <% end %>
    <% if @activity.available_sub_activity_types.any? %>
      <p>
        <%= f.label :sub_activity_type_id, "Sub-type" %>
        <%= f.select :sub_activity_type_id, @activity.available_sub_activity_types.map { |at| [at.name, at.id] }, :selected => @activity.sub_activity_type_id.to_s, :disabled => @activity.available_sub_activity_types.empty? %>
      </p>
    <% end %>
    <p>
      <%= f.label :hours, "Time spent" %>
      <%= f.text_field :hours, :label => "Time spent" %>
      <span class="description">e.g. 7:30, 7.5, or 7.5h for seven hours and thirty minutes;
        0.5, .5h or 30m for half an hour</span>
    </p>
    <% @activity_custom_properties.each do |activity_custom_property| %>
      <p class="custom-property">
        <%= label activity_custom_property.name, :for => "activity[custom_properties][#{activity_custom_property.id}]" %>
        <%= tag :input, nil, :name => "activity[custom_properties][#{activity_custom_property.id}]", :value => @activity.custom_properties[activity_custom_property.id], :class => (activity_custom_property.required ? 'required' : nil) %>
        <span><%= activity_custom_property.unit %></span>
      </p>
    <% end %>
    <p>
      <%= label :comments, "Comments" %>
      <%= f.text_area :comments %>
    </p>
    <p class="buttons">
      <%= f.submit((@activity.new? ? "Add" : "Save"), :class => "button") %> or <%= link_to "Cancel", "#", :id => "close_activity_form" %>
    </p>
  </fieldset>
<% end =%> 
