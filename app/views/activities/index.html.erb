<% throw_content :secondary, partial(:filter) %>
<% show_invoice_form = current_user.is_admin? && !@uninvoiced_activities.empty? %>

<h3>List of activities</h3>

<% if @activities.empty? %>
  <p>No activities found for selected critieria.</p> 
<% else %>
  <p>
    Found <%= @activities.size %> matching activities
    <%= "from #{date_in_users_format(@search_criteria.date_from)}" if @search_criteria.date_from %>
    <%= "till #{date_in_users_format(@search_criteria.date_to)}" if @search_criteria.date_to %>.
    <br/>
    <br/>
  </p>
  
  <%= partial(:grouped_activities) %>

  <%= link_to "Export this list to CSV", activities_path + ".csv?" + params.reject { |k,v| k =~ /^(id|action|controller|format)$/}.to_param %>
  
  <% if show_invoice_form %>
    <%= partial(:invoice_forms) %>
  <% end %>
<% end %>
