<% if @projects %>
  <p>
    Calendar for project <%= select :name => "project_id", :id => "project_id", :collection => @projects.map { |p| [p.id, p.name] }, :selected => @owner.id %>
  </p>
  <div id="projects_<%= @owner.id %>_calendar">
    <%= partial 'calendar_table' %>
  </div>
<% else %>
  <% if @users %>
    <p>
      Calendar for user <%= select :name => "user_id", :id => "user_id", :collection => @users.map { |u| [u.id, u.name] }, :selected => @owner.id %>
    </p>
  <% end %>
  <div id="users_<%= @owner.id %>_calendar">
    <%= partial 'calendar_table' %>
  </div>
<% end %>
<div id="activitites_for_day"></div>