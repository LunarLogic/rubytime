<% if @projects %>
  <p>
    Calendar for project <%= select :name => "project_id", :id => "project_id", :collection => @projects.map { |p| [p.id, p.name] }, :selected => @owner.id.to_s %>
  </p>
  <div id="projects_<%= @owner.id %>_calendar">
    <%= activities_calendar :activities => @activities_by_date, :year => @year, :month => @month, :owner => @owner %>
  </div>
<% else %>
  <% if @users %>
    <p>
      Calendar for user <%= select_tag :user_id, options_from_collection_for_select(@users, :id, :name, @owner.id), :id => "user_id" %>
    </p>
  <% end %>
  <div id="users_<%= @owner.id %>_calendar">
    <%= render :partial => "activities_calendar" %>
  </div>
<% end %>
<div id="activitites_for_day"></div>
