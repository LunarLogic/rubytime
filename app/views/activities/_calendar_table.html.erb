<% if @user != current_user  %>
  <h1><%= @user.name %> (<%= @user.role.name %>)</h1>
<% end %>
<div id="months_navigation" class="clearfix">
  <%= link_to "Previous", url(:user_calendar, @user.id, :month => @previous_month, :year => @previous_year), 
      :id => "previous_month" %>
  <% unless @next_month.nil? && @next_year.nil? %>
    <%= link_to "Next", url(:user_calendar, @user.id, :month => @next_month, :year => @next_year), :id => "next_month" %>
  <% end %>  
</div>

<%= activities_calendar :activities => @activities_by_date, :year => @year, :month => @month, :user => @user %>