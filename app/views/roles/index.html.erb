<h1>List of employees' roles</h1>

<% if @roles.empty? %>
  No roles.
<% else %>
  <table id="roles">
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= link_to 'Remove', resource(role), :class => "delete_row" %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<br/>
<br/>
<br/>

<%= error_messages_for(@role) %>

<%= form_for @role, :action => resource(@role.id ? @role : :roles)  do %>
  <p>
    <%= text_field :name, :label => "Add new role" %> <%= submit 'Add' %>
  </p>
<% end =%>
