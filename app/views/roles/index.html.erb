<% throw_content :secondary, partial(:new_role) %>
<h1>List of employees' roles</h1>

<% if @roles.empty? %>
  No roles found.
<% else %>
  <table id="roles" class="list wide">
  <tr>
    <th>Name</th>
    <th>Can manage financial data?</th>
    <th class="icons"></th>
  </tr>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= role.can_manage_financial_data ? 'yes' : 'no' %></td>
      <td class="icons">
        <%= link_to image_tag("icons/pencil.png", :title => "Edit", :alt => "Edit"), edit_role_path(role) %>
        <%= link_to image_tag("icons/cross.png", :title => "Remove", :alt => "Remove"), role_path(role), :class => "delete_row" %>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>

