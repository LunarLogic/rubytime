<h1>Create new <%= activity_type.parent ? 'sub-activity' : 'activity' %> type</h1>

<%= error_messages_for(activity_type) %>
<%= form_for activity_type, :action => resource(:activity_types), :id => "activity_type_form" do %>
  <fieldset>
    <%= hidden_field :parent_id %>
    <p>
      <%= text_field :name, :label => "Name" %>
    </p>
    <p class="buttons">
      <%= submit 'Create', :class => "button" %>
    </p>
  </fieldset>
<% end =%>
