<% content_for :secondary, render('new_activity_type', :activity_type => @new_activity_type) %>

<h1>List of activity types</h1>

<% if @activity_types.empty? %>
  The list is empty.
<% else %>
  <table id="activity_types" class="list wide">
  <tr>
    <th>Name</th>
    <th>Sub activity types</th>
    <th class="icons"></th>
  </tr>
  <% @activity_types.each do |activity_type| %>
    <tr id="activity-type-<%= activity_type.id %>" class="activity-type">
      <td><%= link_to activity_type.name, activity_type_path(activity_type) %></td>
      <td><%= activity_type_children_summary(activity_type) %></td>
      <td class="icons">
        <%= link_to image_tag("icons/pencil.png", :title => "Edit", :alt => "E"),
              edit_activity_type_path(activity_type) %>
        <% if activity_type.destroy_allowed? %>
          <%= link_to image_tag("icons/cross.png", :title => "Remove", :alt => "R"),
                activity_type_path(activity_type), :class => "delete_row" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>
