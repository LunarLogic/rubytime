<p>
  Client:
</p>
<%= form_for @client do %>
  <p>
    <%= text_field :name, :label => "Name" %>
  </p>
  <p>
    <%= text_area :description, :label => "Description" %>
  </p>
  <p>
    <%= text_field :email, :label => "Email" %>
  </p>
  <% if @client.new_record? %>
    <p>
      Default user for client:
    </p>
    <% fields_for @client_user do %>
        <p>
          <%= text_field :login, :label => "Login" %>
        </p>
        <p>
          <%= text_field :email, :label => "Email" %>
        </p>
        <p>
          <%= text_field :password, :label => "Password" %>
          <span>
            <%= @client_user.password %>
          </span>
        </p>
        <p>
          <%= text_field :password_confirmation, :label => "Confirm password" %>
        </p>
        
    <% end %>
  <% else %>
    <p>
      <%= text_field  :active, :label => "Active"%>
    </p>
  <% end %>
  <p>
    <%= submit "Submit" %>
  </p>
<% end =%>
