<h1><%= @project.new_record? ? 'Create new project' : "Editing project: #{@project.name}" %></h1>

<%= error_messages_for(@project) %>

<%= form_for @project do %>
  <p>
    <label for="project_name">Name</label>
    <%= text_field :name %>
    <span class="description"></span>
  </p>
  <p>
    <label for="project_description">Description</label>
    <%= text_area :description %>
    <span class="description"></span>
  </p>
  <p>
    <label for="project_client_id">Client</label>
    <%= select :client_id, :collection => @clients.map { |c| [c.id, c.name] } %>
    <span class="description"></span>
  </p>
  <% unless @project.new_record? %>
    <p>
      <label for="project_active">Active?</label>
      <%= check_box :active %>
      <span class="description"></span>
    </p>
  <% end %>
  <p>
    <label>&nbsp;</label>
    <%= submit 'Save' %>
  </p>
<% end =%>
